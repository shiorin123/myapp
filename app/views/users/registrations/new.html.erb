<div class="sign_up">
 <div class="sign_up_box">
  <div class="title_area">
   <div class="title">Sign up</div>
  </div>
  <div class="field area">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "PasswordConfirmation" %>
  </div>
</div>
<div class="submit">
   <div class="actions">
    <%= f.submit "Sign up" , class: "submit_button" %>
  </div>
  <% end %>
<%= render "users/shared/links" %>
   </div>
  </div>
</div>
